<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th, td {
            padding: 5px;
            text-align: left;
        }
        .btn-edit{
            background-color: coral;
            outline: none;
            border-radius: 3px;
            width: 60px;
            margin: 5px 0px;
            cursor: pointer;
        }
        .btn-delete{
            background-color: rgb(213, 76, 76);
            outline: none;
            border-radius: 3px;
            width: 60px;
            margin: 5px 0px;
            cursor: pointer;
        }
        .btn-create{
            background-color: rgb(94, 234, 132);
            outline: none;
            border-radius: 3px;
            width: 60px;
            margin: 5px 0px;
            cursor: pointer;
        }
    </style>
</head>

<body>
      <table style="width:100%">
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Password</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Address</td>
            <th>Gender</th>
            <th>RoleId</th>
            <th>PhoneNumber</th>
            <th>Actions</th>
        </tr>
        

        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td><%= dataTable[i].id %></td>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].password %></td>
                <td><%= dataTable[i].firstName %></td>
                <td><%= dataTable[i].lastName %></td>
                <td><%= dataTable[i].address %></td>
                <td><%= dataTable[i].gender %></td>
                <td><%= dataTable[i].roleId %></td>
                <td><%= dataTable[i].phonenumber %></td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">Delete</a>
                    <a href="/crud" class="btn-create" type="button">Create</a>
                </td>
            </tr>
        <% } %>
      </table>
</body>
</html>